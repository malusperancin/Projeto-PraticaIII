<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    tools:context=".PaisActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/toolbar_pais"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#595959"
            app:contentInsetStart="0dp"
            app:layout_anchor="@+id/frameLayout"
            app:layout_anchorGravity="center"
            app:popupTheme="@style/AppTheme.TitleFont">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/ic_voltar" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="48sp"
                    android:fontFamily="@font/bukhariscriptttf"
                    android:text="Nome Pais"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="35dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_alignTop="@id/toolbar_pais"
                    android:layout_alignEnd="@id/toolbar_pais"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10sp"
                    android:foregroundGravity="right"
                    android:foregroundTint="#FFFFFF"
                    android:src="@drawable/ic_menu_favorite" />
            </GridLayout>
        </androidx.appcompat.widget.Toolbar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:elevation="2dp"
                android:padding="20sp"
                app:cardBackgroundColor="@color/cinzaToolbar"
                app:cardCornerRadius="20dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCidade1"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="" />

                    <Button
                        android:id="@+id/btnCidade2"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="" />

                    <Button
                        android:id="@+id/btnCidade3"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10sp"
                    android:paddingTop="30dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="167dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView8"
                        android:layout_alignEnd="@id/imageView8"
                        android:text="Estado/Provincia" />

                    <TextView
                        android:id="@+id/tvNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView8"
                        android:layout_marginTop="0dp"
                        android:text="Nome-Cidade" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_margin="10dp"
                >
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:textAlignment="center"
                    />
                    <TextView
                        android:id="@+id/tvCapital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:textAlignment="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lingua"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvLingua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lingua"
                        android:textAlignment="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moeda"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvMoeda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moeda"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="População"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvPopulacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="População"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clima"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvClima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clima"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Religiao"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvReligiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Religiao"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LGBTQIA+"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/tvLGBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LGBTQIA+"
                        android:textAlignment="center"
                        />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>